// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },

  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_line_height": "standard",

  //
  "restore_on_startup": "none",

  "languages": {
    "Markdown": {
      "remove_trailing_whitespace_on_save": false
    },
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": ["--quiet", "--"]
        }
      }
    }
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "language_models": {
    "openai": {
      "api_url": "https://dashscope.aliyuncs.com/compatible-mode/v1",
      "available_models": [
        {
          "name": "qwen3-coder-plus",
          "display_name": "qwen3-coder-plus",
          "max_tokens": 0
        },
        {
          "name": "qwen3-coder-plus-2025-07-22",
          "display_name": "qwen3-coder-plus-2025-07-22",
          "max_tokens": 0
        },
        {
          "name": "qwen3-coder-480b-a35b-instruct",
          "display_name": "qwen3-coder-480b-a35b-instructs",
          "max_tokens": 0
        }
      ]
    }
    // "openai": {
    //   "api_url": "https://api.moonshot.cn/v1",
    //   "available_models": [
    //     {
    //       "name": "kimi-k2-0711-preview",
    //       "display_name": "kimi-k2-0711-preview",
    //       "max_tokens": 0
    //     }
    //   ]
    // },
    // "anthropic": {
    //   "api_url": "https://api.moonshot.cn/anthropic",
    //   "available_models": [
    //     {
    //       "name": "kimi-k2-0711-preview",
    //       "display_name": "kimi-k2-0711-preview",
    //       "max_tokens": 0,
    //       "default_temperature": 0.6
    //     }
    //   ]
    // }
  },

  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "qwen3-coder-plus-2025-07-22"
    }
  },

  "features": {
    "edit_prediction_provider": "zed"
  },

  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
